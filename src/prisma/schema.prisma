// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// AUTH & USER
// =====================

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String
  password      String
  phone         String?   @unique
  role          String    @default("user") // "admin", "user"
  status        String    @default("active") // "active", "inactive"
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  empresas      Empresa[]
  estoque       EstoqueItem[]
}

// =====================
// MULTI-TENANT: EMPRESA
// =====================

model Empresa {
  id            Int       @id @default(autoincrement())
  userId        Int       // Owner/Admin da empresa
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  nome          String
  status        String    @default("ativo") // "ativo", "inativo"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations - Multi-tenant aggregator
  team          Team[]
  cardapio      Cardapio[]
  
  atendimentos  Atendimento[]
  caixas        Caixa[]

  @@index([userId])
}

// =====================
// MÓDULO: TEAM/STAFF
// =====================

model Team {
  id            Int       @id @default(autoincrement())
  empresa       Int
  empresaRelation Empresa @relation(fields: [empresa], references: [id], onDelete: Cascade)
  nome          String
  login        String
  password      String
  funcao        String    // "caixa", "garcom", "entregador"
  status        String    @default("ativo") // "ativo", "inativo"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([empresa])
  @@unique([login, empresa]) // login único por empresa
}

// =====================
// MÓDULO: CARDÁPIO/MENU
// =====================

model Cardapio {
  id            Int       @id @default(autoincrement())
  empresa       Int
  empresaRelation Empresa @relation(fields: [empresa], references: [id], onDelete: Cascade)
  nome          String
  valor         Decimal
  descricao     String?
  disponivel    Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([empresa])
  @@unique([nome, empresa]) // nome único por empresa
}

// =====================
// MÓDULO: ESTOQUE
// =====================

model EstoqueItem {
  id            Int       @id @default(autoincrement())
  userId        Int
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  nome          String
  quantidade    Int       @default(0)
  categoria     String?
  fornecedor    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

// =====================
// MÓDULO: ATENDIMENTO (Orders/Reservations)
// =====================

model Atendimento {
  id            Int       @id @default(autoincrement())
  empresa       Int
  empresaRelation Empresa @relation(fields: [empresa], references: [id], onDelete: Cascade)
  teamId        Int?      // Garcom/Entregador responsável
  descricao     String?
  status        String    @default("aberto") // "aberto", "em_progresso", "entregue", "cancelado"
  mesa          String?   // Número da mesa ou endereço entrega
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([empresa])
  @@index([status])
}

// =====================
// MÓDULO: CAIXA (Cash Register)
// =====================

model Caixa {
  id            Int       @id @default(autoincrement())
  empresa       Int
  empresaRelation Empresa @relation(fields: [empresa], references: [id], onDelete: Cascade)
  teamId        Int?      // Caixa responsável
  valor         Decimal
  descricao     String?
  metodo        String?   // "dinheiro", "cartao", "pix"
  tipo          String    // "entrada", "saida"
  referencia    String?   // mesa, comanda, transacao
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([empresa])
  @@index([tipo])
}

